<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Mostrar servicios</title>
    <style>
        .container{
            max-width: 1350px;
        }
    </style>
</head>
  <body>

    <div class="container">
        <div class="shadow-lg pb-3 mb-5 bg-body rounded ">
            <h4>Hola</h4>
            <table id="tablaServices" class="table mt-4">
              <thead>
                  <tr>
                      <th style="display:none">id</th>
                      <th>Nombre</th>
                      <th>grpc's
                          <th>Nombre</th>
                          <th>Request</th>
                          <th>Reply</th>

                      </th>

                  </tr>
              </thead>
              <tbody>
                  <% servicios.forEach( (servicio) => { %>
                      <tr>
                          <td style="display:none"><%= servicio._id %></td>
                          <td><%= servicio.name %></td>
                          <td><%servicio.grpcs.forEach((grpc) => { %>
                              <td><%= grpc.name %></td>
                              <td><%= grpc.request %></td>
                              <td><%= grpc.reply %></td>
                          <%  })%>
                          </td>
                          <td>
                            <a href="/delete_service/<%= servicio._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                          </td>

                      </tr>

                      <%  })%>
              </tbody>
          </table>
        </div>
    </div>





    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

 
  </body>
</html>


